<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg4"
    tools:context=".Activity.MusicActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/grey"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        >
    </androidx.appcompat.widget.Toolbar>

    <ListView
        android:id="@+id/lv_music"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </ListView>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    </SeekBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_head_cp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            >
        </ImageView>
        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海阔天空"
            android:layout_alignTop="@id/iv_head_cp"
            android:layout_toRightOf="@id/iv_head_cp"
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/black">
        </TextView>

        <TextView
            android:id="@+id/tv_song_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beyond"
            android:layout_alignBottom="@id/iv_head_cp"
            android:layout_toRightOf="@id/iv_head_cp"
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/darker_gray">
        </TextView>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp">
        </ImageView>

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/next"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_more"
            android:layout_marginRight="20dp">
        </ImageView>


        <ImageView
        android:id="@+id/iv_play"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/play"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_next"
        android:layout_marginRight="20dp">
        </ImageView>

        <ImageView
            android:id="@+id/play_rule"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/xunhuan"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_play"
            android:layout_marginRight="20dp">
        </ImageView>

    </RelativeLayout>

</LinearLayout>